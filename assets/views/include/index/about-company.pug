	const companyList = [
		{
			headline: 'Гирс на канатной проволоке',
			text: 'Геофизические исследования и работы на канатной нержавеющей проволоке в ' +
						'нефтяных и газовых скважинах с избыточным давлением на устье до 700 Атм. и агрессивными ' +
						'средами H2S, CO2',
			link: '#'
		},
		{
			headline: 'Промыслово-геофические исследования скважин',
			text: 'Промыслово геофизические исследования при контроле за разработкой месторождений комплексом ' +
							'прибором с возможностью доставки в интервал записи на ГНКТ, тракторе, ЖК и регистрацией данных ' +
							'в автономном режиме',
			link: '#'
		},
		{
			headline: 'Гис автономным комплексом в горизонтальных скважинах',
			text: 'Геофизические исследования при строительстве скважин с пологим и горизонтальным окончанием комплексом ' +
							'приборов за 1 СПО с доставкой в интервал исследования на бурильном инструменте, НКТ и с записью ' +
							'данных во встроенную память',
			link: '#'
		},
		{
			headline: 'Селективная перфорация при многостадийных ГРП',
			text: 'Проведение селективной перфорации на геофизическом кабеле в горизонтальных скважинах по технологии ' +
							'Plug&Perf, с доставкой в горизонтальный участок по технологии PumpDown при проведении многостадийных ГРП',
			link: '/services.html'
		},
